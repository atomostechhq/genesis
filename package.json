{
  "name": "@atomos_tech/genesis",
  "description": "list of components for your project",
  "version": "1.0.7",
  "private": false,

  "type": "module",

  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",

  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./style": {
      "import": "./dist/index.css",
      "require": "./dist/index.css"
    }
  },

  "files": ["dist"],

  "repository": {
    "url": "git+https://github.com/atomostechhq/genesis.git"
  },

  "homepage": "https://github.com/atomostechhq/genesis#readme",

  "bugs": {
    "url": "https://github.com/atomostechhq/genesis/issues"
  },

  "keywords": ["component", "library", "nextjs", "typescript"],

  "license": "MIT",
  "author": "riya, kajal",

  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsup && npm run build:css",
    "build:css": "postcss app/globals.css -o dist/index.css",
    "prepare": "npm run build"
  },

  "dependencies": {
    "@remixicon/react": "^4.2.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.2"
  },

  "peerDependencies": {
    "react": ">=17 <20",
    "react-dom": ">=17 <20"
  },

  "devDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "next": "^14.2.3",

    "typescript": "^5",
    "tsup": "^8.0.2",

    "tailwindcss": "^3.4.3",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "autoprefixer": "^10.4.19",

    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/node": "^20",
    "eslint": "^8"
  }
}
